//mixin.styl  是css预处理器提供的特殊函数
border-1px($color)
  position: relative
  //相对定位 下边框
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
//去掉 &:after
border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url + "@2x.png")
  //兼容性配置：所有image使用2x，当设备的最小dpr为3 则使用3x
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
